generator client {
    provider = "prisma-client-js"
    output   = "./generated"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id                  String              @id @default(auto()) @map("_id") @db.ObjectId
    name                String
    email               String              @unique
    providerName        String
    providerUserId      String
    Form                Form[]

  @@unique([providerName, providerUserId])
}

model Form {
    id                  String              @id @default(auto()) @map("_id") @db.ObjectId
    active              Boolean             @default(true)
    createdAt           DateTime            @default(now())
    title               String
    fields              FormField[]

    userId              String              @db.ObjectId
    user                User                @relation(fields: [userId], references: [id])
}

model FormField {
    id                  String              @id @default(auto()) @map("_id") @db.ObjectId
    type                String
    settings            Json
    controls            Json

    formId              String              @db.ObjectId
    form                Form                @relation(fields: [formId], references: [id])

    responses           FieldResponse[]
}

model LanguageProcessing {
    id                  String              @id @default(auto()) @map("_id") @db.ObjectId
    sentiment           String
    emotions            String[]

    summaryId           String              @db.ObjectId
    summary             ResponseSummary     @relation(fields: [summaryId], references: [id])

    fieldResponseId     String              @db.ObjectId @unique
    fieldResponse       FieldResponse       @relation(fields: [fieldResponseId], references: [id])
}

model ResponseSummary {
    id                  String              @id @default(auto()) @map("_id") @db.ObjectId
    summary             String

    languageProcessings LanguageProcessing[]
}

model FieldResponse {
    id                  String              @id @default(auto()) @map("_id") @db.ObjectId
    response            Json
    createdAt           DateTime            @default(now())

    langProcessing      LanguageProcessing?

    formFieldId         String              @db.ObjectId
    formField           FormField           @relation(fields: [formFieldId], references: [id])
}
